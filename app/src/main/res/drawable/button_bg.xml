<!-- drawable/button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4C000000" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="16dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>

    <!-- Main white button layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
